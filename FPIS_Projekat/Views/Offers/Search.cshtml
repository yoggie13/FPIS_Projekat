@model IEnumerable<FPIS_Projekat.Models.Offer>

    @{
        ViewData["Title"] = "Rezultati pretrage";
    }
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model._Employee.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model._Client.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    Options
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Offer item in ViewBag.Offers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item._Employee.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item._Client.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Izmeni</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Obriši</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
